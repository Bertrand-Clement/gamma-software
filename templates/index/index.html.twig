{% extends 'base.html.twig' %}
{% block container %}
    <div class="m-5">
        <p>Vous pouvez importer un nouveau fichier</p>
        {{ form_start(form) }}
        <div class="row text-center">
            <div class="col-auto">
                {{ form_row(form.file) }}
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-success">Envoyer</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    {% if bands is not empty %}
        <div class="card">
            <div class="card-header">
                <h2>Liste des groupes</h2>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="text-center">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom du groupe</th>
                        <th scope="col">Origine</th>
                        <th scope="col">Ville</th>
                        <th scope="col">Année de début</th>
                        <th scope="col">Année de séparation</th>
                        <th scope="col">Fondateurs</th>
                        <th scope="col">Membres</th>
                        <th scope="col">Courant musical</th>
                        <th scope="col">Présentation</th>
                        <th scope="col">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for band in bands %}
                        {% include 'index/_band.html.twig' %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="text-bg-warning p-3">Aucun groupe pour le moment</div>
    {% endif %}
    {% include 'band/_modal_confirm.html.twig' %}
{% endblock %}
